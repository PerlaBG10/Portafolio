<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4E6DF7"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="338dp"
            android:layout_height="550dp"
            android:background="@drawable/login_card_background"
            android:elevation="6dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:text="Perfil del Usuario"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieProfile"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="profile_animation.json"
                app:lottie_loop="true" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Email: ejemplo@correo.com"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:singleLine="false"
                android:ellipsize="none"
                android:maxLines="3"
                android:breakStrategy="simple" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Nombre: nombreejemplo"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:singleLine="false"
                android:ellipsize="none"
                android:maxLines="3"
                android:breakStrategy="simple" />


            <Button
                android:id="@+id/btnVolver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#4E6DF7"
                android:elevation="2dp"
                android:text="Volver AtrÃ¡s"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
