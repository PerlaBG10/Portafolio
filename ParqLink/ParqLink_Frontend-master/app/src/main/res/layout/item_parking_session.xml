<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_card_background"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvParkingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parking: Nombre"
            android:textColor="#4D6CF5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio: 2024-01-01 10:00"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fin: 2024-01-01 12:00"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/parkingPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Costo: â‚¬2.50"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</LinearLayout>
