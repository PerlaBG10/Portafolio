<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4E6DF7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="24dp"
        android:paddingBottom="220dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/login_card_background"
                android:elevation="8dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvSessionTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Parking: Parking Sol"
                    android:textColor="@color/colorTextoPrincipal"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSessionDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Duración: 00:00:10"
                    android:textColor="@color/colorTextoPrincipal"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvSessionAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Dirección: Plaza del Sol 5"
                    android:textColor="@color/colorTextoPrincipal"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvSessionPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Precio por hora: €2.0"
                    android:textColor="@color/colorTextoPrincipal"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvSessionTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio Total: €2.00"
                    android:textColor="@color/colorTextoPrincipal"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieProfile"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="detallesession_animation.json" />

</FrameLayout>
