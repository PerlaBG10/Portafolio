<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4E6DF7">

    <!-- Contenido con scroll -->
    <ScrollView
        android:id="@+id/scrollContenido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnVolverHistorial"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvHistorialTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu historial de parking"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:gravity="center" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/navdrawer_activity_historial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="16dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnVolverHistorial"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_margin="40dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Volver AtrÃ¡s"
        android:textColor="#4E6DF7" />

</RelativeLayout>
